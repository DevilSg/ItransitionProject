@model ItransitionProject.Models.Overview 

@{
    ViewBag.Title = "CreateOverview";
}

    
<script>
    $.each(items, function (i, item) {
    $('#mySelect').append($('<option>', { 
        value: item.value,
        text : item.text 
    }));
});
</script>
<form method=post asp-action="CreateOverview">

    <div class="row mb-3">
    <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Title" class="form-control" />
        </div>
    </div>
    <div class="btn-group">
            <p class="dropdown-item">
                <select asp-for="Fkgroup" asp-items="ViewBag.Fkgroup"></select>
            </p>
    </div>

    <div>
     
        @*@Html.ListBox("Tags",(MultiSelectList)ViewBag.TagList)
        @Html.DropDownList("Tags", (MultiSelectList)ViewBag.TagList, new { multiple = "multiple"})*@
        <select multiple asp-items="@ViewBag.TagList">
            @*<option></option>*@
            
        </select>
    </div>
    
    

  <div class="row mb-3">
    <label asp-for="TextOverview" class="col-sm-2 col-form-label">Text</label>
    <div class="col-sm-10">
      <input type="text" asp-for="TextOverview" class="form-control" />
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="RateOverview" class="col-sm-2 col-form-label">Rate</label>
    <div class="col-sm-10">
      <input type="text" asp-for="RateOverview" class="form-control" />
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="PictureOverview" class="col-sm-2 col-form-label">Picture</label>
    <div class="col-sm-10">
      <input type="text" asp-for="PictureOverview" class="form-control" />
    </div>
  </div>
  
       
  <button type="submit" class="btn btn-primary" >Submit</button>
</form>

