@model ItransitionProject.Models.Overview 

@{
    ViewBag.Title = "CreateOverview";
}


<form method=post asp-action="CreateOverview" enctype="multipart/form-data">
    
    <div class="row mb-3">
    <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Title" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
       <label  class="col-sm-2 col-form-label">Group</label>
       <div class="col-sm-10">
            <select class="form-select" asp-for="Fkgroup" asp-items="ViewBag.Fkgroup"></select>
       </div>
           
    </div>

    <div class="row mb-3">
        <label  class="col-sm-2 col-form-label">Tags</label>
       <div class="col-sm-10">
        @Html.ListBox("Tags",(MultiSelectList)ViewBag.TagList)
       </div>
    </div>
    
    

  
  <div class="form-outline mb-4">
    <label class="form-label" >Text</label>
    <textarea asp-for="TextOverview" class="form-control"  rows="4"></textarea>
  </div>
  <div class="row mb-3">
    <label asp-for="RateOverview" class="col-sm-2 col-form-label">Rate</label>
    <div class="col-sm-10">
      <input type="text" asp-for="RateOverview" class="form-control" />
    </div>
  </div>
  <div class="row mb-3">
    <label asp-for="ImageFile" class="col-sm-2 col-form-label">Picture</label>
    <div class="col-sm-10">
      <input type="file" asp-for="ImageFile" class="form-control" multiple/>
    </div>
  </div>
       
  <button type="submit" class="btn btn-primary" >Submit</button>
</form>

