@model ItransitionProject.Models.Overview 

@{
    ViewBag.Title = "CreateOverview";
}


<form method=post asp-action="CreateOverview" enctype="multipart/form-data">
    
    <div class="row mb-3">
    <label asp-for="Title" class="col-sm-2 col-form-label">Заголовок</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="row mb-3">
       <label  class="col-sm-2 col-form-label">Жанр</label>
       <div class="col-sm-10">
            <select class="form-select" asp-for="Fkgroup" asp-items="ViewBag.Fkgroup"></select>
       </div>
    </div>

    <div class="row mb-3">
        <label  class="col-sm-2 col-form-label">Тег</label>
       <div class="col-sm-10">
        @Html.ListBox("Tags",(MultiSelectList)ViewBag.TagList)
       </div>
    </div>
    
  <div class="form-outline mb-4">
    <label class="form-label" >Текст</label>
    <textarea asp-for="TextOverview" class="form-control"  rows="4"></textarea>
    <span asp-validation-for="TextOverview"></span>
  </div>
  <div class="row mb-3">
       <label  class="col-sm-2 col-form-label">Жанр</label>
       <div class="col-sm-10">
            <select class="form-select" aria-label="Default select example" asp-for="RateOverview">
            <option selected>Выбирите рейтинг</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            </select>
       </div>
    </div>
  <div class="row mb-3">
    <label asp-for="ImageFile" class="col-sm-2 col-form-label">Изображение</label>
    <div class="col-sm-10">
      <input type="file" asp-for="ImageFile" class="form-control" multiple/>
    </div>
  </div>
       
  <button type="submit" class="btn btn-primary" >Создать</button>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

