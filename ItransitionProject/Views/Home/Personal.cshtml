@model IEnumerable<ItransitionProject.Models.Overview>

@foreach(var item in Model)
{
    <form>
        <div class="row row-cols-1 row-cols-md-3 g-4">
                    <div class="col">
                    <div class="card h-100" >
                        <img src="@Url.Content(@item.ImageUrl)" class="card-img-top"/>
                        <div class="card-body">
                            <div class="card-card-title">
                                <h5>@item.Title</h5>
                            </div>
                            <div class="card-text">
                                <p class="size">@item.TextOverview</p>
                            </div>
                            <button name="id" class="btn btn-primary" value="@item.Idoverview" asp-action="ViewOverview" >Read More...</button>
                            <button name="id" class="btn btn-primary" asp-action="DeleteOverview" asp-controller="Home" value="@item.Idoverview">Delete</button>
                            <button name="id" class="btn btn-primary" asp-action="EditOverview" asp-controller="Home" value="@item.Idoverview">Edit</button>
                        </div>
                    </div>
                </div>   

        </div>
        
        
    </form>
}
